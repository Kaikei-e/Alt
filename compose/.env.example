# Compose Environment Variables Example
# Copy this file to ../.env and fill in the values

# =============================================================================
# AI Services (Ollama)
# =============================================================================

# Ollama Embedding Service URL (for recap-subworker clustering)
# Required when RECAP_SUBWORKER_MODEL_BACKEND=ollama-remote
OLLAMA_EMBED_URL=http://localhost:11436

# Ollama Embedding Model
OLLAMA_EMBED_MODEL=mxbai-embed-large

# Recap Subworker Model Backend
# - sentence-transformers: Local GPU embedding (requires CUDA)
# - ollama-remote: Remote Ollama API embedding
RECAP_SUBWORKER_MODEL_BACKEND=ollama-remote

# Recap Subworker Device (when using sentence-transformers backend)
# - cuda: Use local NVIDIA GPU
# - cpu: Use CPU (recommended when using ollama-remote)
RECAP_SUBWORKER_DEVICE=cpu

# =============================================================================
# Database Configuration
# =============================================================================

# Recap Database
RECAP_DB_NAME=recap
RECAP_DB_USER=recap_user
RECAP_DB_PASSWORD=your-secure-password-here
RECAP_DB_HOST=recap-db
RECAP_DB_PORT=5432

# =============================================================================
# Service Authentication
# =============================================================================

# Shared secret for inter-service authentication
SERVICE_SECRET=your-service-secret-here

# Alt Backend
ALT_BACKEND_BASE_URL=http://alt-backend:9000
ALT_BACKEND_SERVICE_TOKEN=${SERVICE_SECRET}

# Tag Generator
TAG_GENERATOR_BASE_URL=http://tag-generator:9400
TAG_GENERATOR_SERVICE_TOKEN=${SERVICE_SECRET}

# =============================================================================
# Observability (Grafana)
# =============================================================================

# Grafana admin credentials
GRAFANA_ADMIN_USER=admin
# Password is stored in secrets/grafana_admin_password.txt

# =============================================================================
# OpenTelemetry Configuration
# =============================================================================

# OTLP Exporter endpoint (for all services)
OTEL_EXPORTER_OTLP_ENDPOINT=http://rask-log-aggregator:4318
OTEL_EXPORTER_OTLP_PROTOCOL=http/protobuf

# Deployment environment (development, staging, production)
DEPLOYMENT_ENV=development

# Default log level for all services
LOG_LEVEL=info
