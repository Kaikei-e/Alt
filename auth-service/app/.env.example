# Auth Service Environment Configuration

# Server Configuration
PORT=9500
HOST=0.0.0.0
LOG_LEVEL=info
VERSION=dev

# Database Configuration
DATABASE_URL=postgresql://auth_user:password@auth-postgres:5432/auth_db?sslmode=prefer
DB_HOST=auth-postgres
DB_PORT=5432
DB_NAME=auth_db
DB_USER=auth_user
DB_PASSWORD=password
DB_SSL_MODE=prefer

# Ory Kratos Configuration
KRATOS_PUBLIC_URL=http://kratos-public:4433
KRATOS_ADMIN_URL=http://kratos-admin:4434

# CSRF Configuration
CSRF_TOKEN_LENGTH=32
SESSION_TIMEOUT=24h

# Feature Flags
ENABLE_AUDIT_LOG=true
ENABLE_METRICS=true