# Auth Service Environment Configuration

# Server Configuration
PORT=9500
HOST=0.0.0.0
LOG_LEVEL=debug
GO_ENV=development

# Database Configuration
DATABASE_URL=postgres://auth_user:auth_password@auth-postgres:5432/auth_db?sslmode=disable
DB_HOST=auth-postgres
DB_PORT=5432
DB_NAME=auth_db
DB_USER=auth_user
DB_PASSWORD=auth_password

# Ory Kratos Configuration
KRATOS_PUBLIC_URL=http://kratos:4433
KRATOS_ADMIN_URL=http://kratos:4434

# CSRF Configuration
CSRF_TOKEN_LENGTH=32
SESSION_TIMEOUT=24h

# Feature Flags
ENABLE_AUDIT_LOG=true
ENABLE_METRICS=true

# Optional: Version (usually set by CI/CD)
# VERSION=v1.0.0