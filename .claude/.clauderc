# READ - Paths where Claude can read but not modify
read = [
  "alt-backend/app/**",
  "alt-frontend/app/**",
  "tag-generator/**",
  "search-indexer/**",
  "pre-processor/**",
  "news-creator/**",
  "news-creator/models/**",
  "news-creator/cached_models/**",
  "news-creator/data/**",
  "nginx/**",
  "compose.yml",
  "migrate"
  "db"
  "/**.md"
  "Makefile"
  "**.sh"
]

