  # â”€â”€â”€ Build Artifacts & Dependencies â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  "**/bin/**",                        # Compiled binaries
  "**/dist/**",                       # Distribution files
  "**/build/**",                      # Build outputs
  "**/out/**",                        # Next.js exports
  "**/target/**",                     # Compilation targets
  "**/.next/**",                      # Next.js build cache
  "**/node_modules/**",               # Node dependencies
  "**/vendor/**",                     # Vendored dependencies
  "**/__pycache__/**",               # Python cache
  "**/*.pyc",                        # Python compiled files

  # â”€â”€â”€ Models & Large Files â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  "news-creator/models/**",           # ML model files
  "news-creator/cached_models/**",    # Model cache
  "**/*.pkl",                         # Pickle files
  "**/*.h5",                          # Keras models
  "**/*.pt",                          # PyTorch models
  "**/*.safetensors",                # Model tensors

  # â”€â”€â”€ Sensitive Data â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  "**/.env",                          # Environment variables
  "**/.env.local",                    # Local environment
  "**/.env.*.local",                  # Environment overrides
  "**/secrets/**",                    # Secret files
  "**/*.key",                         # Private keys
  "**/*.pem",                         # Certificates
  "**/*.p12",                         # Certificate stores

  # â”€â”€â”€ Lock Files & Generated â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  "**/package-lock.json",             # NPM lock
  "**/yarn.lock",                     # Yarn lock
  "**/pnpm-lock.yaml",               # PNPM lock
  "**/poetry.lock",                   # Poetry lock
  "**/Pipfile.lock",                  # Pipenv lock

  # â”€â”€â”€ Test & Coverage Reports â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  "**/coverage/**",                   # Coverage reports
  "**/test-results/**",               # Test outputs
  "**/.nyc_output/**",               # NYC coverage
  "**/playwright-report/**",          # Playwright reports

  # â”€â”€â”€ Version Control â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  "**/.git/**",                       # Git repository
  "**/.gitignore",                    # Git ignore rules
  "**/.gitattributes",               # Git attributes

  # â”€â”€â”€ IDE & System Files â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  "**/.vscode/**",                    # VSCode settings
  "**/.idea/**",                      # IntelliJ settings
  "**/.DS_Store",                     # macOS files
  "**/Thumbs.db",                     # Windows files
  "**/*.swp",                         # Vim swap files
