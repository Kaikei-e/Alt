{
  "name": "alt",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "sideEffects": false,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:optimized": "cp next.config.optimized.ts next.config.ts && next build",
    "build:static": "cp next.config.static.ts next.config.ts && STATIC_EXPORT=true next build",
    "start": "next start",
    "lint": "next lint",
    "fmt": "prettier --write .",
    "analyze": "ANALYZE=true next build",
    "analyze:optimized": "cp next.config.optimized.ts next.config.ts && ANALYZE=true next build",
    "test:e2e": "npx playwright test",
    "test:logic": "vitest",
    "test:all": "npx playwright test && vitest",
    "test:security": "vitest src/tests/security/",
    "test:performance:security": "vitest src/tests/performance/security-impact.test.ts",
    "test:security:scan": "vitest src/tests/security/automated-scan.test.ts",
    "test:security:e2e": "npx playwright test e2e/security/",
    "security:report": "node scripts/generate-security-report.js",
    "docker:build:optimized": "docker build -f Dockerfile.frontend-optimized -t alt-frontend:optimized .",
    "docker:build:ultra": "docker build -f Dockerfile.frontend-ultra-optimized -t alt-frontend:ultra .",
    "docker:build:static": "docker build -f Dockerfile.frontend-static -t alt-frontend:static .",
    "docker:test": "docker-compose -f docker-compose.frontend-optimization.yml up --build"
  },
  "dependencies": {
    "@chakra-ui/accordion": "^2.3.1",
    "@chakra-ui/progress": "^2.2.0",
    "@chakra-ui/react": "^3.22.0",
    "@chakra-ui/transition": "^2.1.0",
    "@emotion/cache": "^11.14.0",
    "@emotion/react": "^11.14.0",
    "@tanstack/react-virtual": "^3.13.12",
    "lucide-react": "^0.525.0",
    "next": "15.3.3",
    "next-themes": "^0.4.6",
    "parse5": "^7.3.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-error-boundary": "^6.0.0",
    "sanitize-html": "^2.17.0",
    "valibot": "^1.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@next/bundle-analyzer": "^15.3.5",
    "@playwright/test": "^1.54.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "20.19.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/sanitize-html": "^2.16.0",
    "@vitest/browser": "^3.2.3",
    "eslint": "^9.31.0",
    "eslint-config-next": "15.3.3",
    "jsdom": "^26.1.0",
    "playwright": "^1.54.1",
    "prettier": "3.5.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "optionalDependencies": {
    "@comment": "Production optimization - these can be excluded in Docker production builds"
  },
  "peerDependencies": {
    "@comment": "Ensure compatibility with React 19"
  }
}