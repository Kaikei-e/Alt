{
  "name": "alt",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.18.3",
  "scripts": {
    "dev": "next dev",
    "build": "node scripts/check-env.js && next build",
    "postbuild": "node scripts/ensure-default-stylesheet.mjs",
    "start": "next start",
    "start:next": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "fmt": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "analyze": "ANALYZE=true next build",
    "test:e2e": "node tests/pre-test-setup.cjs && npx playwright test",
    "test:e2e:setup": "node tests/pre-test-setup.cjs",
    "test:e2e:health": "node tests/health-check.cjs",
    "test:e2e:debug": "npx playwright test --debug",
    "test:e2e:headed": "npx playwright test --headed",
    "test:e2e:chrome": "npx playwright test --project=auth-flow-chrome --project=authenticated-chrome",
    "test:e2e:firefox": "npx playwright test --project=auth-flow-firefox --project=authenticated-firefox",
    "test:e2e:errors": "npx playwright test --project=error-scenarios",
    "test": "NODE_OPTIONS='--max-old-space-size=4096' vitest run",
    "test:unit": "vitest run",
    "test:all": "npm run test:e2e && npm run test",
    "test:ui": "vitest --ui",
    "test:run": "NODE_OPTIONS='--max-old-space-size=16384' vitest run",
    "test:ci": "NODE_OPTIONS='--max-old-space-size=4096 --expose-gc' vitest run --reporter=verbose --no-coverage"
  },
  "dependencies": {
    "@chakra-ui/accordion": "^2.3.1",
    "@chakra-ui/progress": "^2.2.0",
    "@chakra-ui/react": "^3.28.0",
    "@chakra-ui/transition": "^2.1.0",
    "@emotion/cache": "^11.14.0",
    "@emotion/react": "^11.14.0",
    "@ory/client": "^1.22.7",
    "@ory/nextjs": "1.0.0-rc.0",
    "@tanstack/react-virtual": "^3.13.12",
    "@use-gesture/react": "^10.3.1",
    "framer-motion": "^12.23.24",
    "html-react-parser": "^5.2.7",
    "lucide-react": "^0.547.0",
    "next": "16.0.0",
    "next-themes": "^0.4.6",
    "parse5": "^8.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-error-boundary": "^6.0.0",
    "react-lazy-load-image-component": "^1.6.3",
    "sanitize-html": "^2.17.0",
    "swr": "^2.3.6",
    "valibot": "^1.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@next/bundle-analyzer": "^16.0.0",
    "@next/eslint-plugin-next": "^16.0.0",
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "24.9.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/react-lazy-load-image-component": "^1.6.4",
    "@types/sanitize-html": "^2.16.0",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/browser": "^4.0.3",
    "axe-core": "^4.11.0",
    "axe-playwright": "^2.2.2",
    "dotenv": "^17.2.3",
    "eslint": "^9.38.0",
    "eslint-config-next": "16.0.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-react-hooks": "^7.0.0",
    "jsdom": "^27.0.1",
    "playwright": "^1.56.1",
    "prettier": "3.6.2",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vitest": "^4.0.3"
  },
  "engines": {
    "node": "24"
  }
}
