{
  "name": "alt",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.14.0",
  "scripts": {
    "dev": "next dev",
    "build": "node scripts/check-env.js && next build",
    "start": "node .next/standalone/server.js",
    "start:next": "next start",
    "lint": "next lint",
    "lint:fix": "eslint . --fix",
    "fmt": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "analyze": "ANALYZE=true next build",
    "test:e2e": "node tests/pre-test-setup.cjs && npx playwright test",
    "test:e2e:setup": "node tests/pre-test-setup.cjs",
    "test:e2e:health": "node tests/health-check.cjs",
    "test:e2e:debug": "npx playwright test --debug",
    "test:e2e:headed": "npx playwright test --headed",
    "test:e2e:chrome": "npx playwright test --project=auth-flow-chrome --project=authenticated-chrome",
    "test:e2e:firefox": "npx playwright test --project=auth-flow-firefox --project=authenticated-firefox",
    "test:e2e:errors": "npx playwright test --project=error-scenarios",
    "test": "NODE_OPTIONS='--max-old-space-size=4096' vitest run",
    "test:all": "npm run test:e2e && npm run test",
    "test:ui": "vitest --ui",
    "test:run": "NODE_OPTIONS='--max-old-space-size=16384' vitest run",
    "test:ci": "NODE_OPTIONS='--max-old-space-size=4096 --expose-gc' vitest run --reporter=verbose --no-coverage",
    "test:middleware": "NODE_OPTIONS='--max-old-space-size=2048' vitest run --config vitest.config.middleware.ts",
    "test:components": "NODE_OPTIONS='--max-old-space-size=4096 --expose-gc' vitest run --reporter=verbose --no-coverage",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:memory": "NODE_OPTIONS='--max-old-space-size=6144 --expose-gc' vitest run --reporter=verbose",
    "test:debug": "NODE_OPTIONS='--max-old-space-size=4096 --inspect' vitest run"
  },
  "dependencies": {
    "@chakra-ui/accordion": "^2.3.1",
    "@chakra-ui/progress": "^2.2.0",
    "@chakra-ui/react": "^3.26.0",
    "@chakra-ui/transition": "^2.1.0",
    "@emotion/cache": "^11.14.0",
    "@emotion/react": "^11.14.0",
    "@ory/client": "^1.22.1",
    "@tanstack/react-virtual": "^3.13.12",
    "html-react-parser": "^5.2.6",
    "isomorphic-dompurify": "^2.19.0",
    "lucide-react": "^0.525.0",
    "next": "15.4.7",
    "next-themes": "^0.4.6",
    "parse5": "^7.3.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-error-boundary": "^6.0.0",
    "react-lazy-load-image-component": "^1.6.3",
    "sanitize-html": "^2.17.0",
    "valibot": "^1.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@next/bundle-analyzer": "^15.5.2",
    "@next/eslint-plugin-next": "^15.5.2",
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "20.19.1",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@types/react-lazy-load-image-component": "^1.6.4",
    "@types/sanitize-html": "^2.16.0",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitest/browser": "^3.2.3",
    "dotenv": "^16.6.0",
    "eslint": "^9.35.0",
    "eslint-config-next": "15.3.3",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^26.1.0",
    "playwright": "^1.55.0",
    "prettier": "3.5.3",
    "typescript": "^5.9.2",
    "vite": "^7.1.4",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": "24"
  }
}
