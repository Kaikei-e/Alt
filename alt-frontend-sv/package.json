{
	"name": "alt-frontend-sv",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview --host 127.0.0.1 --port 4173 --strictPort",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "biome lint --write",
		"format": "biome format --write",
		"test": "vitest run",
		"test:server": "vitest run --project=server",
		"test:client": "VITEST_BROWSER=true vitest run --project=client",
		"test:all": "VITEST_BROWSER=true vitest run",
		"test:watch": "vitest --watch",
		"test:e2e": "bun run build && npx playwright test --reporter=list",
		"test:e2e:ui": "npx playwright test --ui"
	},
	"dependencies": {
		"@bufbuild/protobuf": "^2.10.2",
		"@connectrpc/connect": "^2.1.1",
		"@connectrpc/connect-web": "^2.1.1",
		"@ory/client": "^1.22.15",
		"@tanstack/svelte-query": "^6.0.14",
		"bits-ui": "^2.14.4",
		"clsx": "^2.1.1",
		"tailwind-merge": "^3.4.0",
		"tailwind-variants": "^3.2.2",
		"valibot": "^1.2.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.10",
		"@bufbuild/protoc-gen-es": "^2.10.2",
		"@internationalized/date": "^3.10.1",
		"@lucide/svelte": "^0.562.0",
		"@playwright/test": "^1.57.0",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-node": "^5.4.0",
		"@sveltejs/enhanced-img": "^0.9.2",
		"@sveltejs/kit": "^2.49.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.18",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^25.0.3",
		"@vitest/browser": "^4.0.16",
		"@vitest/browser-playwright": "^4.0.16",
		"axe-playwright": "^2.2.2",
		"svelte": "^5.46.1",
		"svelte-check": "^4.3.5",
		"tailwindcss": "^4.1.18",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"vite": "^7.3.0",
		"vitest": "^4.0.16",
		"vitest-browser-svelte": "^2.0.1"
	}
}
