{
	"name": "alt-frontend-sv",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview --host 127.0.0.1 --port 4173 --strictPort",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "biome check",
		"format": "biome format --write",
		"test": "bun run test:unit && bun run test:component",
		"test:unit": "vitest run -c vitest.unit.config.ts",
		"test:component": "vitest run -c vitest.component.config.ts",
		"test:unit:watch": "vitest -c vitest.unit.config.ts --watch",
		"test:component:watch": "vitest -c vitest.component.config.ts --watch",
		"test:e2e": "bun run build && npx playwright test --reporter=list",
		"test:e2e:ui": "npx playwright test --ui"
	},
	"dependencies": {
		"@ory/client": "^1.22.15",
		"@tanstack/svelte-query": "^6.0.10",
		"bits-ui": "^2.14.4",
		"clsx": "^2.1.1",
		"tailwind-merge": "^3.4.0",
		"tailwind-variants": "^3.2.2",
		"valibot": "^1.2.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.10",
		"@internationalized/date": "^3.10.1",
		"@lucide/svelte": "^0.562.0",
		"@playwright/test": "^1.57.0",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-node": "^5.4.0",
		"@sveltejs/enhanced-img": "^0.9.2",
		"@sveltejs/kit": "^2.49.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.18",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/svelte": "^5.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^25.0.3",
		"axe-playwright": "^2.2.2",
		"jsdom": "^27.3.0",
		"svelte": "^5.46.1",
		"svelte-check": "^4.3.5",
		"tailwindcss": "^4.1.18",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"vite": "npm:rolldown-vite@^7.3.0",
		"vitest": "^4.0.16"
	}
}
